---
import Layout from '../layouts/Layout.astro';
import FuneralHomeCard from '../components/FuneralHomeCard.astro';
import { funeralHomes } from '../data/funeralHomes';
---

<Layout title="Houston Funeral Homes Directory">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-8 text-center">Houston Funeral Homes Directory</h1>
    
    <div class="max-w-3xl mx-auto mb-8 text-center">
      <p class="text-lg text-gray-600">
        Find comprehensive information about funeral homes serving the Houston area. 
        Contact these establishments directly for detailed service information and pricing.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-6xl mx-auto">
      {funeralHomes.map((home) => (
        <FuneralHomeCard
          name={home.name}
          address={home.address}
          phone={home.phone}
          website={home.website}
        />
      ))}
    </div>

    <div class="mt-12 bg-gray-50 p-8 rounded-lg max-w-3xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-4">Need Assistance?</h2>
      <p class="text-lg text-gray-600 mb-6">
        Our team is available to help you find the right funeral home for your needs.
      </p>
      <a
        href="tel:+1234567890"
        class="bg-primary text-white px-8 py-3 rounded-md font-bold hover:bg-primary-dark transition-colors inline-block"
      >
        Call Us: (123) 456-7890
      </a>
    </div>
  </div>
</Layout>